{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "register",
            "runtimeArgs": ["-r", "ts-node/register"],
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/index.ts"
        },
        {
			"type": "node",
			"request": "launch",
			"name": "npm start",
			"program": "${workspaceFolder}/node_modules/ts-node/dist/bin",
			"skipFiles": [
				"<node_internals>/**/*.js"
			],
            "args": [
                "src/index.ts"
            ]
		}

    ]
}